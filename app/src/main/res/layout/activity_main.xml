<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:orientation="vertical" android:layout_width="match_parent"    android:layout_height="match_parent">    <TableLayout        android:orientation="horizontal"        android:layout_width="match_parent"        android:layout_height="wrap_content"        >        <!--android:stretchColumns="1"-->        <TableRow            android:orientation="horizontal"            android:layout_width="match_parent"            android:layout_height="wrap_content">            <Button                android:id="@+id/IPv6AddressButton"                android:text="IPv6 Address"                android:layout_width="wrap_content"                android:layout_height="wrap_content" />            <TextView                android:id="@+id/IPv6AddressTextView"                android:hint="Your IPv6 Address"                android:layout_gravity="center"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:isScrollContainer="true" />        </TableRow>        <TableRow>            <Button                android:text="Mac Address"                android:layout_width="wrap_content"                android:layout_height="wrap_content" />            <TextView                android:id="@+id/MacTextView"                android:hint="Your MAC Address"                android:layout_gravity="center"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                />        </TableRow>        <TableRow>            <Button                android:text="Network Status"                android:layout_width="wrap_content"                android:layout_height="wrap_content" />            <TextView                android:id="@+id/NetworkStatusTextView"                android:layout_gravity="center"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:hint="Your Network Status" />        </TableRow>        <TableRow            android:layout_width="match_parent"            android:layout_height="match_parent">        </TableRow>    </TableLayout>    <EditText        android:id="@+id/editText"        android:layout_width="match_parent"        android:layout_height="0dp"        android:layout_weight="2"        android:inputType="textMultiLine"        android:ems="10"        android:editable="true"        android:enabled="false"/>    <TableLayout        android:stretchColumns="1"        android:layout_width="match_parent"        android:layout_height="wrap_content">        <TableRow            android:layout_width="match_parent"            android:layout_height="match_parent">        </TableRow>        <TableRow            android:layout_width="match_parent"            android:layout_height="match_parent">        </TableRow>        <TableRow>            <Button                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:text="Disconnect"                android:id="@+id/DisconnectButton" />            <!--<android.widget.Space-->                <!--android:layout_width="match_parent"-->                <!--android:layout_height="wrap_content"-->                <!--android:layout_column="2"/>-->            <Button                android:id="@+id/TestButton"                android:text="Test"                android:layout_height="wrap_content" />            <Button                android:id="@+id/ConnectButton"                android:text="Connect"                android:layout_weight="1"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_column="3"/>        </TableRow>        <TableRow>            <Button                android:id="@+id/FinishButton"                android:text="Finish Activity"                android:layout_width="match_parent"                android:layout_height="wrap_content" />            <android.widget.Space                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_column="2"/>            <Button                android:id="@+id/CheckButton"                android:text="Check Network"                android:layout_weight="1"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_column="3"/>        </TableRow>        <TableRow            android:layout_width="match_parent"            android:layout_height="match_parent">        </TableRow>    </TableLayout></LinearLayout>